<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/BtnTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="เลือกวิธีการเข้าสู่ระบบ" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_close_bluegreen_24dp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btnUserLogin"
                style="@style/TextBold30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                fancy:fb_defaultColor="#17A1BE"
                fancy:fb_radius="20dp"
                fancy:fb_iconPaddingTop="8dp"
                fancy:fb_iconResource="@drawable/ic_person_white_24dp"
                fancy:fb_iconPosition="left"
                fancy:fb_text="ชื่อผู้ใช้งาน" />

            <mehdi.sakout.fancybuttons.FancyButton
                style="@style/TextBold30"
                android:id="@+id/btnTelLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                fancy:fb_iconPaddingTop="8dp"
                android:elevation="2dp"
                fancy:fb_iconResource="@drawable/ic_phone_white_24dp"
                fancy:fb_iconPosition="left"
                fancy:fb_defaultColor="#64C9D5"
                fancy:fb_radius="20dp"
                fancy:fb_text="เบอร์โทรศัพท์" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>