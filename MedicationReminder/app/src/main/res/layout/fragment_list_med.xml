<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvAppBarList"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:elevation="8dp"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <TextView
                style="@style/TextAppBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="รายการยา" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--Date-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_margin="8dp"
                android:background="@color/colorDarkGreen">

                <TextView
                    android:id="@+id/tvDate"
                    style="@style/ListMedName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="วันที่"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/calendar2" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ListMedInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/alarm"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="ก่อนอาหาร" />

                <TextView
                    style="@style/TextBoldDarkGray24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="08:00"
                    android:textColor="@color/colorBtnBlue" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcListMedBefore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/medication_list" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorLineDivideGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ListMedInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/alarm"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="หลังอาหาร" />

                <TextView
                    style="@style/TextBoldDarkGray24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/textview_border"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="08:30"
                    android:textColor="@color/colorBtnBlue" />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcListMedAfter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/medication_list" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>